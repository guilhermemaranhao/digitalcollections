{
  "settings": {
    "number_of_shards" : 1,
    "analysis" : {
      "analyzer" : {
        "collection_analyzer": {
          "tokenizer": "standard",
          "filter": ["lowercase", "asciifolding", "brazilian_stop"]
        },
        "collection_stopword_analyzer":{
          "tokenizer": "standard",
          "filter": ["lowercase", "asciifolding"]
        }
      },
      "filter": {
        "brazilian_stop": {
          "type": "stop",
          "stopwords": "_brazilian_"
        }
      }
    }
  },
  "mappings" : {
    "journal" : {
      "properties" : {
        "ano" : {"type" : "integer", "index" : "not_analyzed"},
        "tipo_extracao" : {"type": "string", "index": "not_analyzed"},
        "caminho_arquivo" : {"type": "string", "index": "not_analyzed"},
        "jornal_thumb" : {"type": "string", "index": "not_analyzed"},
        "conteudo" : {"type": "string", "index": "analyzed", "analyzer": "collection_stopword_analyzer", "search_analyzer": "collection_analyzer", "search_quote_analyzer": "collection_stopword_analyzer"}
      }
    }
  }
}