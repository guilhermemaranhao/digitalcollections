
<% content_for :container do %>
    <div class="row-fluid">
      <div class="input-group">
        <input type="text" id="txtTermo" class="form-control" placeholder="Termo para busca" >
        <span class="input-group-btn">
        <a class="btn btn-primary" type="button" onclick="buscar()">Procurar</a>
      </span>
      </div>
    </div>

    <script type="text/javascript">
        function buscar(){
            Turbolinks.visit("api/v1/jornals?termo=" + $("#txtTermo").val());
        }
    </script>
<% end %>

